<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">

    <EditText
        android:id="@+id/addPost_titleEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addPost_contentEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Content"
        app:layout_constraintEnd_toEndOf="@+id/addPost_titleEditText"
        app:layout_constraintStart_toStartOf="@+id/addPost_titleEditText"
        app:layout_constraintTop_toBottomOf="@+id/addPost_titleEditText" />

    <Button
        android:id="@+id/addPost_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ADD"
        app:layout_constraintEnd_toEndOf="@+id/addPost_contentEditText"
        app:layout_constraintStart_toStartOf="@+id/addPost_contentEditText"
        app:layout_constraintTop_toBottomOf="@+id/addPost_contentEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>